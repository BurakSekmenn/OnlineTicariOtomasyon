@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Departman
@{
    ViewBag.Title = "DepartmanGetir";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="margin-left:20px;">Departman Güncelleme</h2>
<br />
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="form-group" style="margin-left:20px;">
        <label>Kategori adı giriniz:</label>
        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control", required = "required" })
    </div>
    @Html.HiddenFor(x => x.Departmanid)
    <button class="btn btn-warning" style="margin-left:20px;">Güncelle</button>
}

