@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="card mb-4" style="margin-top:20px;">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Cariler</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tbl1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cari Adı</th>
                        <th>Cari Soyadı</th>
                        <th>Cari Şehir</th>
                        <th>Cari Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Cari Adı</th>
                        <th>Cari Soyadı</th>
                        <th>Cari Şehir</th>
                        <th>Cari Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>
                            <td>@k.Cariid</td>
                            <td>@k.Cariad</td>
                            <td>@k.CariSoyadı</td>
                            <td>@k.CariSehir</td>
                            <td>@k.CariMail</td>


                            <td>
                                <a href="/Cari/CariGetir/@k.Cariid" class="btn btn-primary" style="width:100px;">Güncelle</a>
                                <a href="/Cari/CariSil/@k.Cariid" class="btn btn-danger" style="margin-left: 10px; width: 100px;">Sil</a>
                                <a href="/Cari/MusteriSatis/@k.Cariid" class="btn btn-dark">Satış Geçmişi</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<a href="/Cari/CariEkle" class="btn btn-primary" style="margin-left:20px;">Yeni Cari Ekle</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
