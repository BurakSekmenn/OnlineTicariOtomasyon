@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card mb-4" style="margin-top:20px;">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Faturalar</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tbl1" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>Fatura Seri Sıra No</th>
                        <th>Fatura Tarih</th>
                        <th>Vergi Dairesi</th>
                        <th>Saat</th>
                        <th>Toplam</th>
                        <th>Teslim Eden</th>
                        <th>Teslim Alan</th>
                        <th>İşlemler</th>


                    </tr>
                </thead>
                <tfoot>
                    <tr>

                        <th>Fatura Seri Sıra No</th>
                        <th>Fatura Tarih</th>
                        <th>Vergi Dairesi</th>
                        <th>Saat</th>
                        <th>Toplam</th>
                        <th>Teslim Eden</th>
                        <th>Teslim Alan</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>

                            <td>@k.FaturaSerino @k.FaturaSıraNo</td>
                            <td>@k.Tarih</td>
                            <td>@k.VergiDairesi</td>
                            <td>@k.Saat</td>
                            <td>@k.Toplam</td>
                            <td>@k.TeslimEden</td>
                            <td>@k.TeslimAlan</td>
                            <td>
                                <a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-primary" style="width:100px;">Güncelle</a>
                                <a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-dark">Detaylar</a>
                                 <a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="width:150px;">Yeni Kalem Ekle </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




<a href="/Fatura/FaturaEkle" class="btn btn-primary" style="margin-left:20px;">Yeni Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn-primary" style="margin-left:20px;" data-toggle="modal" data-target="#Modal1">PopUp Peneceresi</button>


<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSerino</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>

                        </tr>

                    }

                </table>
            </div>
        </div>
    </div>
</div>











<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

