@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Class2
@{
    ViewBag.Title = "Dinamik2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Order Details</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">New Order</button>
        </div>
    </div>
    @*Receive All Database Data From Controller And Display Those Data In Client Side*@

    @foreach (var item in Model.deger1)
    {
        <div class="panel-body">
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <td>Seri SıraNo : @item.FaturaSerino - @item.FaturaSıraNo </td>
                        <td>Cari : @item.TeslimAlan</td>
                        <td>Tarih : @item.Tarih </td>
                        <td>Vergi Dairesi : @item.VergiDairesi </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        
                                    </tr>
                                    @{
                                        var totalBill = 0;
                                    }
                                    @foreach (var order in item.FaturaKalems)
                                    {
                                        <tr>
                                            <td>@order.Aciklama</td>
                                            <td>@order.Miktar</td>
                                            <td>@order.BirimFiyat</td>
                                          
                                        </tr>
                                        totalBill = totalBill + @Convert.ToInt32(order.Tutar);
                                    }
                                </tbody>
                            </table>
                            <span class="pull-right" style="margin-right:100px;"><strong>Total Bill :  </strong> @totalBill</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    
    }
</div>

