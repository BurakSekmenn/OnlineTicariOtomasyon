@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="width:97%; margin-left:20px;">Fatura Kalemleri Sayfası</h2>
<br />

<ol class="breadcrumb mb-4" style="width:97%; margin-left:20px;">
    <li class="breadcrumb-item active">Fatura Detay : @ViewBag.d</li>
</ol>
<br />
<table class="table table-hover" style="margin-left: 20px; width: 97%;">
    <tr>
        <th>Fatura ID</th>
        <th>Fatura Açıklamları</th>
        <th>Miktar</th>
        <th>Birim Fiyat </th>
        <th>Tutar</th>
      
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Faturaid</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
           
        </tr>

    }

</table>
<a href="/Fatura/YeniKalem/" class="btn btn-dark" style="margin-left:20px" >Fatura Kalem Ekle</a>

