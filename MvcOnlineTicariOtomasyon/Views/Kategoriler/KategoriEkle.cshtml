@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="margin-left:20px;">Yeni Kategori Sayfası</h2>
<br />
<form style="margin-left:20px;" class="form-group" method="post">
    <label for="KategoriAd">Kategori adı giriniz:</label>
    @Html.TextBoxFor(x=>x.KategoriAd, new {@class="form-control", required = "required" }) 
    <button class="btn btn-info" style="margin-top:10px;">Kaydet</button>

</form>


