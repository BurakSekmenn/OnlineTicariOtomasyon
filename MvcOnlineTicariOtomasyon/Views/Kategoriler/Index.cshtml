@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card mb-4" style="margin-top:20px;">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Kategoriler</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tbl1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>İslemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>İslemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var k in Model)
                    {
                       <tr>
                           <td>@k.KategoriID</td>
                           <td>@k.KategoriAd</td>
                           <td>
                               <a href="/Kategoriler/KategoriGetir/@k.KategoriID" class="btn btn-primary" style="width:100px;">Güncelle</a>
                               <a href="/Kategoriler/KategoriSil/@k.KategoriID" class="btn btn-danger" style="margin-left: 10px; width: 100px;">Sil</a>
                           </td>
                       </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>










<a href="/Kategoriler/KategoriEkle" class="btn btn-primary" style="margin-left:20px;">Yeni Kategori Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
