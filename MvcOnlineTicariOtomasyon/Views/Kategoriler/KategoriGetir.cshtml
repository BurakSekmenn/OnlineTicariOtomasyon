@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="margin-left:20px;">Kategori Güncelleme</h2>
<br />
@using (Html.BeginForm("KategoriGuncelle", "Kategoriler", FormMethod.Post))
            {
                <div class="form-group" style="margin-left:20px;">
                    <label>Kategori adı giriniz:</label>
                    @Html.TextBoxFor(x=>x.KategoriAd, new { @class = "form-control", required = "required" } )
                </div>
                 @Html.HiddenFor(x=>x.KategoriID)
                <button class="btn btn-warning" style="margin-left:20px;">Güncelle</button>
            }

