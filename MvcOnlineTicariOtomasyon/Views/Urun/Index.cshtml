@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="card mb-4" style="margin-top:20px;">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Ürünler</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tbl1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Marka Adı</th>
                        <th>Stok</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Marka Adı</th>
                        <th>Stok</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Urunid</td>
                            <td>@u.UrunAd</td>
                            <td>@u.Marka</td>
                            <td>@u.Stok</td>
                            <td>@u.AlisFiyat</td>
                            <td>@u.SatisFiyat</td>
                            <td>@u.Kategori.KategoriAd</td>
                            <td>@u.UrunGorsel</td>
                            <td>
                                <a href="/Urun/UrunSil/@u.Urunid" class="btn btn-primary">Sil</a>
                                <a href="/Urun/UrunGuncelle/@u.Urunid" class="btn btn-danger">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>







<a href="/Urun/YeniUrun" class="btn btn-primary" style="margin-left:20px;">Yeni Ürün Ekle</a>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

