@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Urun
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="margin-left:20px;">Yeni Ürün Sayfası</h2>
<br />
@using (Html.BeginForm("UrunDuzenle", "Urun", FormMethod.Post))
{
    <div style="margin-left:20px;">
        <label>Urun adı giriniz:</label>
        @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control", required = "required" })

        <label>Urun marka giriniz:</label>
        @Html.TextBoxFor(x => x.Marka, new { @class = "form-control", required = "required" })


        <label>Urun stok sayısını giriniz:</label>
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control", required = "required" })

        <label>Alis Fiyatını giriniz:</label>
        @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control", required = "required" })


        <label>Satış Fiyatını giriniz:</label>
        @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control", required = "required" })


        <label>Kategori giriniz:</label>
        @Html.DropDownListFor(x => x.kategoriid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", required = "required" })<br />


        <label>Durumu Seçiniz:</label>
        @Html.TextBoxFor(x => x.Durum, new { @class = "form-control", required = "required" })

        <label>Ürün Görsel</label>
        @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control", required = "required" })
        @Html.HiddenFor(x => x.Urunid)
        <button class="btn btn-info" style="margin-top:10px;">Kaydet</button>
    </div>
}

<form style="margin-left:20px;" class="form-group" method="post">
</form>

