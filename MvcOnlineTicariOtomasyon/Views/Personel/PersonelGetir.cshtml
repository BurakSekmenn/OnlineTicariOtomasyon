@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Personel

@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<br />
<h2 style="margin-left:20px;">Personel Güncelleme</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    <div class="form-group" style="margin-left:20px;">
        <label>Personel adı giriniz:</label>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group" style="margin-left:20px;">
        <label>Personel Soyadı giriniz:</label>
        @Html.TextBoxFor(x => x.PersonelSoyadı, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group" style="margin-left:20px;">
        <label>Personel Resim seçiniz:</label>
        <input type="file" name="PersonelGorsel" />
    </div>
    <div class="form-group" style="margin-left:20px;">
        <label>Personel Departmanı Seçiniz </label>
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", required = "required" })
    </div>
    @Html.HiddenFor(x => x.Personelid)
    <button class="btn btn-warning" style="margin-left:20px;">Güncelle</button>
}
